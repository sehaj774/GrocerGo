<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.name %> - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<section class="bg-gradient-to-r from-primary to-green-700 text-white py-8">
    <div class="container mx-auto px-4">
        <div class="flex items-center space-x-4">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                <i class="<%= category.icon %> text-white text-2xl"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold"><%= category.name %></h1>
                <p class="text-white/80">Fresh <%= category.name.toLowerCase() %> from verified local suppliers</p>
            </div>
        </div>
    </div>
</section>

<section class="py-8">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <% products.forEach(product => { %>
                <%- include('partials/product-card', { product }) %>
            <% }) %>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
