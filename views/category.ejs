<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.name %> - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<% const productCount = products ? products.length : 0; %>

<!-- CATEGORY HERO -->
<section class="category-hero">
    <div class="container mx-auto px-4">
        <div class="flex items-start md:items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <div class="category-hero-icon-shell">
                    <i class="<%= category.icon %>"></i>
                </div>
                <div>
                    <h1 class="category-hero-title"><%= category.name %></h1>
                    <p class="category-hero-subtitle">
                        Fresh <%= category.name.toLowerCase() %> from verified local suppliers near you.
                    </p>
                    <p class="category-hero-meta">
                        <span><%= productCount %></span> item<%= productCount === 1 ? '' : 's' %> available in this category
                    </p>
                </div>
            </div>

            <div class="hidden md:flex category-hero-right">
                <span class="category-hero-chip">
                    <i class="fas fa-bolt"></i>
                    <span>Fast delivery in 10–30 minutes</span>
                </span>
            </div>
        </div>
    </div>
</section>

<!-- PRODUCTS GRID -->
<section class="py-8 category-section">
    <div class="container mx-auto px-4">
        <% if (!products || products.length === 0) { %>
            <div class="category-empty-state">
                <div class="category-empty-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h2>No products in this category yet</h2>
                <p class="category-empty-text">
                    We’re onboarding more <%= category.name.toLowerCase() %> from local brands. 
                    Try exploring other categories or check back soon.
                </p>
                <a href="/products" class="category-empty-cta">
                    Browse all products
                </a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                <% products.forEach(product => { %>
                    <%- include('partials/product-card', { product }) %>
                <% }) %>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
