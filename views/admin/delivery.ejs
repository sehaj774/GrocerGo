<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Delivery Personnel - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">
    <div class="flex min-h-screen">
        <!-- Sidebar with active state -->
        <%- include('./partials/sidebar', { currentPath: '/admin/delivery' }) %>

        <main class="flex-1 bg-muted p-6 md:p-8">
            <div class="max-w-5xl mx-auto space-y-8">
                <!-- Page header -->
                <header>
                    <h2 class="text-3xl font-bold mb-1">Manage Delivery Personnel</h2>
                    <p class="text-sm text-muted-foreground">
                        Add, verify and manage your delivery partners.
                    </p>
                </header>

                <!-- Add new person card -->
                <section class="bg-card p-6 rounded-xl shadow-md border border-border">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-bold flex items-center gap-2">
                            <span class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
                                <i class="fas fa-motorcycle text-green-600 text-sm"></i>
                            </span>
                            Add new delivery partner
                        </h3>
                    </div>

                    <form action="/admin/delivery" method="POST"
                          class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                        <div class="md:col-span-1">
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Full name
                            </label>
                            <input
                                type="text"
                                name="name"
                                required
                            >
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Phone number
                            </label>
                            <input
                                type="text"
                                name="phone_number"
                                required
                            >
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Vehicle details
                            </label>
                            <input
                                type="text"
                                name="vehicle_details"
                                placeholder="e.g. Activa, MH12 AB 1234"
                            >
                        </div>

                        <button
                            type="submit"
                            class="w-full px-4 py-2 rounded-md text-white bg-primary hover:bg-green-700 font-semibold text-sm"
                        >
                            Add person
                        </button>
                    </form>
                </section>

                <!-- Table card -->
                <section class="bg-card p-6 rounded-xl shadow-md border border-border">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-xl font-bold flex items-center gap-2">
                            <span class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
                                <i class="fas fa-users text-blue-500 text-sm"></i>
                            </span>
                            Delivery team
                        </h3>
                        <p class="text-xs text-muted-foreground">
                            Total members: <strong><%= personnel.length %></strong>
                        </p>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Vehicle</th>
                                    <th>Status</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (personnel && personnel.length) { %>
                                    <% personnel.forEach(person => { %>
                                        <tr>
                                            <td class="font-medium"><%= person.name %></td>
                                            <td><%= person.phone_number %></td>
                                            <td><%= person.vehicle_details || '-' %></td>
                                            <td>
                                                <span class="status-badge 
                                                    <%= person.is_verified ? 'status-verified' : 'status-not-verified' %>">
                                                    <%= person.is_verified ? 'Verified' : 'Not Verified' %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="flex justify-end space-x-2">
                                                    <form action="/admin/delivery/<%= person.id %>/verify" method="POST">
                                                        <button
                                                            type="submit"
                                                            class="px-3 py-1 text-xs rounded-md text-white font-semibold <%= person.is_verified ? 'bg-orange-500 hover:bg-orange-600' : 'bg-green-500 hover:bg-green-600' %>"
                                                        >
                                                            <%= person.is_verified ? 'Unverify' : 'Verify' %>
                                                        </button>
                                                    </form>
                                                    <form action="/admin/delivery/<%= person.id %>/delete" method="POST"
                                                          onsubmit="return confirm('Are you sure you want to delete this person?');">
                                                        <button
                                                            type="submit"
                                                            class="px-3 py-1 text-xs rounded-md text-white font-semibold bg-red-500 hover:bg-red-600"
                                                        >
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-6 text-sm text-muted-foreground">
                                            No delivery personnel added yet.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </main>
    </div>
</body>
</html>
