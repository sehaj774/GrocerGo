<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order #<%= order._id.toString().slice(-8) %> - GrocerGo</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background-color: #f7fafc; }
        .admin-nav a[href="/admin/orders"] { background-color: var(--primary); color: white; }
    </style>
</head>
<body>
    <div class="flex min-h-screen bg-gray-100">
        <%- include('./partials/sidebar') %>
        <main class="flex-1 p-8">
            <a href="/admin/orders" class="text-primary hover:underline mb-6 inline-flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to All Orders
            </a>
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800">Order #<%= order._id.toString().slice(-8) %></h2>
                    <p class="text-gray-600 mt-1">Placed on <%= new Date(order.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
                </div>
                <div class="mt-4 md:mt-0 bg-white px-4 py-2 rounded-lg shadow-sm border border-gray-200">
                     <p class="text-sm text-gray-500">Customer</p>
                     <p class="font-medium text-gray-900"><%= order.user.name %> (<%= order.user.email %>)</p>
                </div>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="md:col-span-2 bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="p-6 border-b border-gray-200 bg-gray-50">
                        <h3 class="font-bold text-xl text-gray-800">Items Ordered</h3>
                    </div>
                    <div class="p-6 space-y-6">
                        <% order.products.forEach(item => { %>
                            <div class="flex items-center space-x-4">
                                <div class="h-20 w-20 flex-shrink-0 bg-gray-100 rounded-lg border border-gray-200 p-1">
                                    <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="h-full w-full object-contain">
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-lg font-semibold text-gray-900 truncate"><%= item.product.name %></p>
                                    <p class="text-sm text-gray-500">
                                        Qty: <span class="font-medium text-gray-900"><%= item.quantity %></span> &times; ₹<%= item.product.price.toFixed(2) %>
                                    </p>
                                </div>
                                <div class="text-right">
                                    <span class="text-lg font-bold text-gray-900">₹<%= (item.product.price * item.quantity).toFixed(2) %></span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-200 bg-gray-50">
                            <h3 class="font-bold text-xl text-gray-800">Order Status</h3>
                        </div>
                        <div class="p-6">
                            <%
                                let statusClass = 'bg-yellow-100 text-yellow-800 border-yellow-200';
                                let statusIcon = '<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 12H9v-2h2v2zm0-4H9V5h2v5z"/></svg>'; // Info icon default
                                if (order.status === 'Delivered') {
                                    statusClass = 'bg-green-100 text-green-800 border-green-200';
                                    statusIcon = '<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>';
                                } else if (order.status === 'Out for Delivery') {
                                    statusClass = 'bg-purple-100 text-purple-800 border-purple-200';
                                    statusIcon = '<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20"><path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/><path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z"/></svg>';
                                } else if (order.status === 'Shipped') {
                                    statusClass = 'bg-blue-100 text-blue-800 border-blue-200';
                                    statusIcon = '<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20"><path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/><path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v6.05A2.5 2.5 0 0115.95 16H17a1 1 0 001-1v-5a1 1 0 00-.293-.707l-2-2A1 1 0 0015 7h-1z"/></svg>';
                                } else if (order.status === 'Cancelled') {
                                    statusClass = 'bg-red-100 text-red-800 border-red-200';
                                    statusIcon = '<svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>';
                                }
                            %>
                            <div class="mb-6">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold border <%= statusClass %>">
                                    <%- statusIcon %>
                                    <%= order.status %>
                                </span>
                            </div>

                            <% if (order.driverName) { %>
                                <div class="mb-6 p-4 bg-blue-50 rounded-lg border border-blue-100">
                                    <p class="text-sm text-blue-900">Assigned Driver</p>
                                    <p class="font-semibold text-blue-900 flex items-center mt-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                        <%= order.driverName %>
                                    </p>
                                </div>
                            <% } %>

                            <div class="space-y-3">
                                <% if (order.status === 'Processing') { %>
                                    <form action="/admin/orders/<%= order._id %>/status" method="POST" class="space-y-3">
                                        <input type="hidden" name="status" value="Shipped">
                                        <div>
                                            <label for="driverName" class="block text-sm font-medium text-gray-700 mb-1">Assign Driver</label>
                                            <input type="text" id="driverName" name="driverName" placeholder="Enter driver's name" required
                                                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm p-2.5 border">
                                        </div>
                                        <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                                            Mark as Shipped
                                        </button>
                                    </form>
                                <% } %>

                                <% if (order.status === 'Shipped') { %>
                                    <form action="/admin/orders/<%= order._id %>/status" method="POST">
                                        <input type="hidden" name="status" value="Out for Delivery">
                                        <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200">
                                            Mark Out for Delivery
                                        </button>
                                    </form>
                                <% } %>

                                <% if (order.status === 'Out for Delivery') { %>
                                    <form action="/admin/orders/<%= order._id %>/status" method="POST">
                                        <input type="hidden" name="status" value="Delivered">
                                        <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
                                            Mark as Delivered
                                        </button>
                                    </form>
                                <% } %>

                                <% if (order.status !== 'Delivered' && order.status !== 'Cancelled') { %>
                                    <form action="/admin/orders/<%= order._id %>/status" method="POST" class="pt-2">
                                        <input type="hidden" name="status" value="Cancelled">
                                        <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                                            Cancel Order
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-200 bg-gray-50">
                             <h3 class="font-bold text-xl text-gray-800">Order Summary</h3>
                        </div>
                        <div class="p-6 space-y-3">
                            <div class="flex justify-between text-gray-600">
                                <span>Subtotal</span>
                                <span>₹<%= order.subtotal.toFixed(2) %></span>
                            </div>
                            <div class="flex justify-between text-gray-600">
                                <span>Delivery Fee</span>
                                <span class="<%= order.deliveryFee === 0 ? 'text-green-600 font-medium' : '' %>">
                                    <%= order.deliveryFee === 0 ? 'FREE' : `₹${order.deliveryFee.toFixed(2)}` %>
                                </span>
                            </div>
                            <% if ((order.tipAmount || 0) > 0) { %>
                                <div class="flex justify-between text-gray-600">
                                    <span>Driver Tip</span>
                                    <span>₹<%= order.tipAmount.toFixed(2) %></span>
                                </div>
                            <% } %>
                            <div class="border-t border-gray-200 pt-3 mt-3">
                                <div class="flex justify-between font-bold text-lg text-gray-900">
                                    <span>Total</span>
                                    <span class="text-green-600">₹<%= (order.totalAmount + (order.tipAmount || 0)).toFixed(2) %></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-200 bg-gray-50">
                            <h3 class="font-bold text-xl text-gray-800">Shipping Address</h3>
                        </div>
                        <div class="p-6">
                            <div class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <p class="text-gray-600 leading-relaxed"><%= order.shippingAddress %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>