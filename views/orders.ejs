<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<!-- HERO -->
<section class="orders-hero">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h1 class="orders-hero-title">
                    My Order History
                </h1>
                <p class="orders-hero-subtitle">
                    Track your past orders, delivery status, and reorder your favourites in a tap.
                </p>
            </div>

            <div class="orders-hero-right">
                <div class="orders-hero-chip">
                    <i class="fas fa-truck"></i>
                    <span>Lightning-fast delivery from local stores</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ORDERS LIST -->
<section class="orders-section">
    <div class="container mx-auto px-4 py-8">
        <% if (orders && orders.length > 0) { %>
            <div class="space-y-5">
                <% orders.forEach(order => { %>
                    <article class="order-card">
                        <div class="order-card-header">
                            <div>
                                <h2 class="order-id">
                                    Order <span>#<%= order._id.toString().slice(-8) %></span>
                                </h2>
                                <p class="order-date">
                                    Placed on
                                    <span>
                                        <%= new Date(order.orderDate).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                                    </span>
                                </p>
                            </div>

                            <div class="order-meta-right">
                                <span class="order-total">
                                    ₹<%= order.totalAmount.toFixed(2) %>
                                </span>
                                <span class="order-status-badge">
                                    <%= order.status %>
                                </span>
                            </div>
                        </div>

                        <div class="order-card-footer">
                            <div class="order-footer-left">
                                <span class="order-footer-icon">
                                    <i class="fas fa-receipt"></i>
                                </span>
                                <span class="order-footer-text">
                                    Tap “View details” to see items, address and payment info.
                                </span>
                            </div>

                            <a href="/orders/<%= order._id %>" class="order-details-btn">
                                View details
                            </a>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else { %>
            <div class="orders-empty-state">
                <div class="orders-empty-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h2>You haven’t placed any orders yet</h2>
                <p class="orders-empty-text">
                    Once you place an order, you’ll be able to track it here and quickly reorder your favourite items.
                </p>
                <a href="/products" class="orders-empty-cta">
                    Start shopping
                </a>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
