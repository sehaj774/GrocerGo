<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<% const resultCount = products ? products.length : 0; %>

<!-- SEARCH HERO -->
<section class="search-hero">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h1 class="search-hero-title">
                    Search Results
                </h1>

                <% if (searchQuery) { %>
                    <div class="search-pill">
                        <span class="search-pill-label">Query</span>
                        <span class="search-pill-text"><%= searchQuery %></span>
                    </div>
                    <p class="search-result-meta">
                        <span><%= resultCount %> item<%= resultCount === 1 ? '' : 's' %> found</span>
                    </p>
                <% } else { %>
                    <p class="search-result-meta">
                        Browsing all products Â· <span><%= resultCount %></span> available
                    </p>
                <% } %>
            </div>

            <div class="search-meta-right">
                <span class="search-meta-chip">
                    <i class="fas fa-bolt"></i>
                    <span>Instant delivery in your area</span>
                </span>
            </div>
        </div>
    </div>
</section>

<!-- RESULTS -->
<section class="py-8 search-results">
    <div class="container mx-auto px-4">
        <% if (!products || products.length === 0) { %>
            <div class="search-empty-state">
                <div class="search-empty-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h2>No results found</h2>
                <p class="search-empty-text">
                    Try searching for a different product, or explore popular categories like milk, bread, snacks or fruits.
                </p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 search-grid">
                <% products.forEach(product => { %>
                    <%- include('partials/product-card', { product }) %>
                <% }) %>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
