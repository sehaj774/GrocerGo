<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<section class="bg-muted py-8">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold mb-2">Search Results</h1>
        <% if (searchQuery) { %>
        <p class="text-muted-foreground">Showing results for "<strong><%= searchQuery %></strong>"</p>
        <% } else { %>
        <p class="text-muted-foreground">Browse all our products</p>
        <% } %>
    </div>
</section>

<section class="py-8">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <% products.forEach(product => { %>
                <%- include('partials/product-card', { product }) %>
            <% }) %>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
