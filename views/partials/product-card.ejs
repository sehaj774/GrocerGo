<div class="product-card-container">
    <article class="product-card" data-testid="card-product-<%= product.id %>">
        <!-- IMAGE / BADGE -->
        <div class="relative product-card-media">
            <div class="product-card-image-shell">
                <img src="<%= product.image %>" 
                     alt="<%= product.name %>" 
                     loading="lazy"
                     class="product-card-image"
                     data-testid="img-product-<%= product.id %>" />
            </div>

            <% if (product.verified) { %>
                <div class="verified-badge">✓ Verified</div>
            <% } %>
        </div>

        <!-- TEXT / PRICE / CTA -->
        <div class="product-card-body">
            <h3 data-testid="text-product-name-<%= product.id %>">
                <%= product.name %>
            </h3>

            <p class="brand-text" data-testid="text-product-brand-<%= product.id %>">
                <%= product.brand ? product.brand.name : 'Unknown Brand' %>
            </p> 

            <div class="price-section">
                <div>
                    <!-- keep ₹ in the text so tests and content stay safe -->
                    <span class="price" data-testid="text-product-price-<%= product.id %>">
                        ₹<%= product.price.toFixed(2) %>
                    </span>
                    <span class="unit">/ <%= product.unit %></span>
                </div>

                <button class="add-to-cart-btn" 
                        data-product-id="<%= product._id %>" 
                        data-testid="button-add-to-cart-<%= product.id %>">
                    Add
                </button>
            </div>
        </div>
    </article>
</div>
