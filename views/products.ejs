<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<% const totalProducts = products ? products.length : 0; %>

<!-- HERO / META -->
<section class="products-hero">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h1 class="products-hero-title">
                    All Products
                </h1>
                <p class="products-hero-subtitle">
                    Browse our entire collection of fresh, locally-sourced groceries.
                </p>
                <p class="products-hero-meta">
                    <span><%= totalProducts %></span> item<%= totalProducts === 1 ? '' : 's' %> available
                </p>
            </div>
        </div>
    </div>
</section>

<!-- GRID -->
<section class="py-8 products-section">
    <div class="container mx-auto px-4">
        <% if (!products || products.length === 0) { %>
            <div class="products-empty-state">
                <div class="products-empty-icon">
                    <i class="fas fa-shopping-basket"></i>
                </div>
                <h2>No products available</h2>
                <p class="products-empty-text">
                    Weâ€™re onboarding more local brands in your area. Check back soon for fresh groceries.
                </p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 products-grid">
                <% products.forEach(product => { %>
                    <%- include('partials/product-card', { product }) %>
                <% }) %>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/js/app.js"></script>
</body>
</html>
