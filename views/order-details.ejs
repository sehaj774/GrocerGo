<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - GrocerGo</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-background text-foreground font-sans">

<%- include('partials/header') %>

<% const shortId = order._id.toString().slice(-8); %>
<% const orderDateFormatted = new Date(order.orderDate).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }); %>

<!-- HERO / META -->
<section class="order-details-hero">
    <div class="container mx-auto px-4">
        <a href="/orders" class="order-back-link">&larr; Back to My Orders</a>

        <div class="order-hero-layout">
            <div>
                <h1 class="order-hero-title">Order Tracking</h1>
                <p class="order-hero-subtitle">
                    Order <span>#<%= shortId %></span> • Placed on <span><%= orderDateFormatted %></span>
                </p>
            </div>

            <div class="order-hero-right">
                <div class="order-hero-total">
                    <span class="order-hero-total-label">Total paid</span>
                    <span class="order-hero-total-value">₹<%= (order.totalAmount + (order.tipAmount || 0)).toFixed(2) %></span>
                </div>
                <span class="order-status-pill">
                    <%= order.status %>
                </span>
            </div>
        </div>
    </div>
</section>

<!-- MAIN CONTENT -->
<section class="py-8 order-details-section">
    <div class="container mx-auto px-4" id="order-details-page" data-order-id="<%= order._id %>">

        <div class="grid md:grid-cols-3 gap-8">
            <!-- LEFT: progress + items -->
            <div class="md:col-span-2 space-y-6">

                <!-- Progress Card -->
                <div class="bg-card p-6 rounded-lg shadow-md border border-border order-progress-card">
                    <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
                        <span class="order-progress-icon">
                            <i class="fas fa-location-arrow"></i>
                        </span>
                        Live order status
                    </h2>

                    <div class="progress-container">
                        <div class="progress-bar">
                            <div class="progress-bar-fill" id="progress-fill"></div>
                        </div>

                        <div class="progress-step" data-status="Processing">
                            <div class="step-icon"><i class="fas fa-receipt"></i></div>
                            <div class="step-label">Processing</div>
                        </div>
                        <div class="progress-step" data-status="Shipped">
                            <div class="step-icon"><i class="fas fa-box"></i></div>
                            <div class="step-label">Shipped</div>
                        </div>
                        <div class="progress-step" data-status="Out for Delivery">
                            <div class="step-icon"><i class="fas fa-truck"></i></div>
                            <div class="step-label">Out for Delivery</div>
                        </div>
                        <div class="progress-step" data-status="Delivered">
                            <div class="step-icon"><i class="fas fa-check"></i></div>
                            <div class="step-label">Delivered</div>
                        </div>
                    </div>
                    
                    <div id="driver-info" class="order-driver-info <%= (order.status === 'Shipped' || order.status === 'Out for Delivery') && order.driverName ? '' : 'hidden' %>">
                        <p>
                            <i class="fas fa-motorcycle mr-2 text-primary"></i>
                            Your order is being delivered by 
                            <strong id="driver-name-display"><%= order.driverName || '' %></strong>.
                        </p>
                    </div>
                </div>

                <!-- Items Card -->
                <div class="bg-card p-6 rounded-lg shadow-md border border-border">
                    <h2 class="font-bold text-xl mb-4">Items Ordered</h2>
                    <div class="space-y-4">
                        <% order.products.forEach(item => { %>
                            <div class="flex items-center space-x-4">
                                <img 
                                    src="<%= item.product.image %>" 
                                    alt="<%= item.product.name %>" 
                                    class="w-16 h-16 rounded-lg object-cover"
                                >
                                <div class="flex-1 min-w-0">
                                    <p class="font-semibold truncate"><%= item.product.name %></p>
                                    <p class="text-sm text-muted-foreground">Qty: <%= item.quantity %></p>
                                </div>
                                <span class="font-semibold">
                                    ₹<%= (item.product.price * item.quantity).toFixed(2) %>
                                </span>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <!-- RIGHT: summary + tip + address -->
            <div class="space-y-6">
                <!-- Summary -->
                <div class="bg-card p-6 rounded-lg shadow-md border border-border">
                    <h2 class="font-bold text-xl mb-4">Order Summary</h2>
                    <div class="space-y-2 text-muted-foreground text-sm">
                        <div class="flex justify-between">
                            <span>Subtotal:</span>
                            <span>₹<%= order.subtotal.toFixed(2) %></span>
                        </div>
                        <div class="flex justify-between">
                            <span>Delivery Fee:</span>
                            <span>
                                <%= order.deliveryFee === 0 
                                    ? 'FREE' 
                                    : '₹' + order.deliveryFee.toFixed(2) %>
                            </span>
                        </div>

                        <div class="flex justify-between <%= (order.tipAmount || 0) > 0 ? '' : 'hidden' %>" id="tip-summary-line">
                            <span>Tip Added:</span>
                            <span id="tip-summary-amount">₹<%= (order.tipAmount || 0).toFixed(2) %></span>
                        </div>

                        <div class="border-t border-border my-2"></div>

                        <div class="flex justify-between font-bold text-foreground text-lg">
                            <span>Total:</span>
                            <span class="text-primary">
                                ₹<%= (order.totalAmount + (order.tipAmount || 0)).toFixed(2) %>
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Tip section (shows when Delivered) -->
                <div id="tip-section" class="bg-card p-6 rounded-lg shadow-md border border-border <%= order.status === 'Delivered' ? '' : 'hidden' %>">
                    <h3 class="font-bold text-xl mb-2">Add a tip for your driver?</h3>
                    <p class="text-sm text-muted-foreground mb-4">
                        Tips go directly to the delivery partner. A small thank-you goes a long way.
                    </p>

                    <div class="flex space-x-2 mb-2">
                        <button class="tip-btn border px-3 py-1 rounded hover:bg-gray-100" data-amount="10">₹10</button>
                        <button class="tip-btn border px-3 py-1 rounded hover:bg-gray-100" data-amount="20">₹20</button>
                        <button class="tip-btn border px-3 py-1 rounded hover:bg-gray-100" data-amount="50">₹50</button>
                        <input 
                            type="number" 
                            id="custom-tip" 
                            placeholder="Custom" 
                            class="border p-1 rounded w-20 text-sm"
                        >
                    </div>

                    <button 
                        id="add-tip-btn" 
                        class="w-full bg-green-500 text-white font-semibold py-2 rounded hover:bg-green-600 disabled:opacity-50"
                        disabled
                    >
                        Add Tip
                    </button>

                    <p id="tip-message" class="text-sm text-green-600 mt-2 text-center"></p>
                </div>

                <!-- Address -->
                <div class="bg-card p-6 rounded-lg shadow-md border border-border">
                    <h3 class="font-bold text-xl mb-2">Shipping Address</h3>
                    <p class="text-sm text-muted-foreground whitespace-pre-line">
                        <%= order.shippingAddress %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/cart-sidebar') %>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const socket = io();
        const page = document.getElementById('order-details-page');
        const orderId = page.dataset.orderId;
        const driverInfoDiv = document.getElementById('driver-info');
        const driverNameDisplay = document.getElementById('driver-name-display');
        const tipSection = document.getElementById('tip-section');
        const addTipBtn = document.getElementById('add-tip-btn');
        const customTipInput = document.getElementById('custom-tip');
        const tipMessage = document.getElementById('tip-message');
        const tipSummaryLine = document.getElementById('tip-summary-line');
        const tipSummaryAmount = document.getElementById('tip-summary-amount');
        let selectedTipAmount = 0;

        // --- Progress Bar Logic ---
        const steps = document.querySelectorAll('.progress-step');
        const progressBarFill = document.getElementById('progress-fill');
        const statusOrder = ['Processing', 'Shipped', 'Out for Delivery', 'Delivered'];

        function updateProgressBar(currentStatus) {
            const currentIndex = statusOrder.indexOf(currentStatus);
            if (currentIndex === -1) return;

            steps.forEach((step, index) => {
                step.classList.remove('active', 'completed');

                if (index < currentIndex) {
                    step.classList.add('completed');
                } else if (index === currentIndex) {
                    step.classList.add('active');
                }
            });

            const progressPercentage = (currentIndex / (statusOrder.length - 1)) * 100;
            progressBarFill.style.width = `${progressPercentage}%`;

            if (currentStatus === 'Delivered') {
                tipSection.classList.remove('hidden');
            } else {
                tipSection.classList.add('hidden');
            }
        }

        // Initialize progress bar
        updateProgressBar('<%= order.status %>');

        // --- WebSocket Listener ---
        socket.on('orderStatusUpdate', (data) => {
            if (data.orderId === orderId) {
                console.log('Status updated:', data);
                updateProgressBar(data.newStatus);

                if ((data.newStatus === 'Shipped' || data.newStatus === 'Out for Delivery') && data.driverName) {
                    driverNameDisplay.textContent = data.driverName;
                    driverInfoDiv.classList.remove('hidden');
                } else {
                    driverInfoDiv.classList.add('hidden');
                }
            }
        });

        // --- Tip Selection Logic ---
        document.querySelectorAll('.tip-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                selectedTipAmount = parseFloat(btn.dataset.amount);
                customTipInput.value = '';
                addTipBtn.disabled = false;

                document.querySelectorAll('.tip-btn').forEach(b => b.classList.remove('bg-green-200'));
                btn.classList.add('bg-green-200');
            });
        });

        customTipInput.addEventListener('input', () => {
            selectedTipAmount = parseFloat(customTipInput.value) || 0;
            addTipBtn.disabled = selectedTipAmount <= 0;
            document.querySelectorAll('.tip-btn').forEach(b => b.classList.remove('bg-green-200'));
        });

        // --- Add Tip Button Logic ---
        addTipBtn.addEventListener('click', async () => {
            if (selectedTipAmount <= 0) return;

            addTipBtn.disabled = true;
            addTipBtn.textContent = 'Adding...';

            try {
                const response = await fetch(`/api/orders/${orderId}/tip`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ tipAmount: selectedTipAmount })
                });
                const result = await response.json();

                if (result.success) {
                    tipMessage.textContent = `Tip of ₹${result.tipAmount.toFixed(2)} added! Thank you!`;
                    tipSummaryAmount.textContent = `₹${result.tipAmount.toFixed(2)}`;
                    tipSummaryLine.classList.remove('hidden');
                } else {
                    tipMessage.textContent = 'Failed to add tip.';
                    addTipBtn.disabled = false;
                }
            } catch (error) {
                console.error('Tip error:', error);
                tipMessage.textContent = 'An error occurred.';
                addTipBtn.disabled = false;
            } finally {
                addTipBtn.textContent = 'Add Tip';
            }
        });
    });
</script>

</body>
</html>
